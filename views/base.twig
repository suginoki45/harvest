<!DOCTYPE html>
<html class="no-js" {{ site.language_attributes }}>
  <head>
  	<meta charset="{{ site.charset }}">
		{{ function('wp_head') }}
  </head>
  <body class="{{ body_class }}">
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		{% block header %}
			{% include 'header.twig' with { 'identifier': identifier } %}
		{% endblock %}

		<main id="content">
			{% block content %}
				No content found!
			{% endblock %}
		</main>

		{% block footer %}
			{% include 'footer.twig' %}
		{% endblock %}
  </body>
</html>
